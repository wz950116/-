.shadow {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #000000;
}
.video {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 500rpx;
  z-index: 9999;
}
.preview-video-close {
  color: #ffffff;
  font-weight: 700;
  font-size: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}