.photowall_wrap {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.photowall {
  border-bottom: 1px solid #cccccc;
  padding-bottom: 20rpx;
  margin-top: 30rpx;
}
.user {
  width: 100%;
}
.user-head {
  width: 70rpx;
  height: 70rpx;
  border-radius: 15rpx;
  vertical-align: top;
  margin-right: 20rpx;
}
.user-name {
  color: #5d3e21;
  font-size: 36rpx;
  font-weight: 700;
}
.photos {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: calc(100% - 100rpx);
  padding-left: 100rpx;
}
.photo-message {
  width: 100%;
  color: #666666;
  font-size: 32rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.photo-wrapper {
  width: 30%;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.photo {
  width: 100%;
  height: 160rpx;
}