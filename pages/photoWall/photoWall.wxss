.photowall_wrap {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
  box-sizing: border-box;
}
/* 上传图文 */
.upload {
  position: fixed;
  right: 0;
  top: 100rpx;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  z-index: 999;
}
.upload-icon {
  display: inline-block;
  width:40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
.photowall {
  border-bottom: 1px solid #cccccc;
  padding-bottom: 20rpx;
  margin-top: 30rpx;
}
.user {
  width: 100%;
}
.user-head {
  width: 70rpx;
  height: 70rpx;
  border-radius: 15rpx;
  vertical-align: top;
  margin-right: 20rpx;
}
.user-name {
  color: #5d3e21;
  font-size: 36rpx;
  font-weight: 700;
}
.photos {
  width: calc(100% - 100rpx);
  padding-left: 100rpx;
}
.photo-message {
  display: block;
  width: 100%;
  color: #666666;
  font-size: 32rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}
.photo-wrapper {
  display: inline-block;
  width: calc(100% / 3 - 20rpx);
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 20rpx 20rpx 0;
}
.photo {
  position: relative;
  width: 100%;
  height: 160rpx;
}
.video-shadow {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .3);
  z-index: 9998;
}
.video-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 50%;
  height: 50%;
}
.delete {
  width: 100%;
  text-align: right;
}
.delete-icon {
  width: 50rpx;
  height: 50rpx;
}