.page {
  padding: 20px;
}
.top_button {
  width: 100%;
  height: 70rpx;
}
.button {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 36rpx;
}
.button_cancel {
  float: left;
  color: #333333;
  background: transparent;
}
.button_publish {
  float: right;
  color: #ffffff;
  background: #a02f2b;
  border-radius: 40rpx;
}
.text {
  width: 100%;
  margin: 80rpx 0;
  font-size: 36rpx;
  padding: 5px;
  min-height: 100rpx;
}
.image_content {
  width: 100%;
  /* display: flex;
  flex-wrap: wrap;
  justify-content: space-between; */
  margin-bottom: 40rpx;
}
.image {
  display: inline-block;
  width: 30%;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 20rpx 20rpx 0;
}
.moment_img {
  position: relative;
  width: 100%;
  height: 200rpx;
}
video {
  width: 100%;
  height: 200rpx;
}
.video-shadow {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .3);
}
.video-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 50%;
  height: 50%;
}
.shadow {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #000000;
}
.video {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 500rpx;
  z-index: 9999;
}
.preview-video-close {
  color: #ffffff;
  font-weight: 700;
  font-size: 40rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}