.add_party {
  box-sizing: border-box;
  padding: 30rpx;
  background: #eee;
  min-height: 100vh;
  overflow-y: auto;
}

.add_party_text {
  line-height: 60rpx;
  color: #666;
  margin-left: 20rpx;
}

.no_picker {
  color: #cccccc;
}

.picker, .add_party_textarea {
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.add_party_input {
  border: 1px solid #ccc;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.add_party_textarea {
  height: 200rpx;
  padding: 20rpx 30rpx;
  line-height: 48rpx;
}

.upload_images {
  margin-bottom: 100rpx;
}

.moment_img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.complete {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-radius: 0;
  background: #a02f2b;
  color: #ffffff;
}