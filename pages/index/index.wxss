/* 注册 */
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}
.drawer_title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 40rpx;
  margin-bottom: 50rpx;
}
.drawer_form_item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 60rpx;
  font-size: 36rpx;
}
.drawer_form_item-input, .drawer_form_item-radio, .drawer_form_item-upload {
  display: inline-block;
  margin-left: 40rpx;
  vertical-align: top;
}
.drawer_form_item-input {
  margin-top: 23rpx;
  border: 2rpx solid #cccccc; 
  padding-left: 10rpx; 
}
.drawer_form_item-radio label {
  margin-right: 60rpx;
}
.drawer_form_item-upload {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 15rpx;
  font-size: 30rpx;
  background: #cccccc;
  text-align: center;
  border-radius: 10rpx;
}
.drawer_button_group {
  margin: 50rpx 0;
  text-align: center;
}
.drawer_button {
  display: inline-block;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 20rpx;
}
